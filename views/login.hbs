<link rel="stylesheet" type="text/css" href="/login.css">
<div class="wrapper">
    <div class="login-text">
        <button class="cta"><i class="bi bi-chevron-compact-down"></i></button>
        <div class="text">
            <form action="/authentication/login" method="POST">
                <h1>Login</h1>
                <hr>
                <br>
                <input type="text" class="form-control" id="name" name="username" placeholder="Username">
                <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                <button type="submit" class="signup-btn">Login</button>
                <p>Don't have an Account?<a href="/authentication/signup">Register Here!</a></p>
            </form>
        </div>
    </div>

    <div class="call-text">
        <h1><span>Log in</span><br>to your account</h1>
    </div>
</div>


<script>
var cta = document.querySelector(".cta");
var check = 0;
cta.addEventListener('click', function(e){
    var text = e.target.nextElementSibling;
    var loginText = e.target.parentElement;
    text.classList.toggle('show-hide');
    loginText.classList.toggle('expand');
    if(check == 0) {
        cta.innerHTML ="<i class=\"bi bi-chevron-compact-up\"></i>";
        check++;
    }
    else {
        cta.innerHTML ="<i class=\"bi bi-chevron-compact-down\"></i>";
        check = 0;
    }
})
</script>